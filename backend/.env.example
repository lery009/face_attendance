# ================================
# Attendance System Configuration
# ================================

# API Settings
API_HOST=0.0.0.0
API_PORT=3000

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/face_recognition_db

# Face Recognition Settings
FACE_TOLERANCE=0.6
FACE_MATCH_THRESHOLD=0.6

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-CHANGE-THIS-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Attendance Settings
ATTENDANCE_COOLDOWN_MINUTES=5

# Work Hours Settings (for Late/Absent tracking)
WORK_START_TIME=08:00
WORK_END_TIME=17:00
LATE_GRACE_PERIOD_MINUTES=15
HALF_DAY_CUTOFF_TIME=12:00

# Timezone Settings
TIMEZONE=Asia/Manila

# ================================
# EMAIL NOTIFICATION SETTINGS
# ================================

# Enable/Disable Email Notifications
EMAIL_ENABLED=false

# SMTP Configuration
# For Gmail, use smtp.gmail.com:587
# Note: For Gmail, you need to generate an App Password:
# https://support.google.com/accounts/answer/185833

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@attendance.com
SMTP_FROM_NAME=Attendance System

# Notification Preferences
NOTIFY_ON_LATE=true
NOTIFY_ON_ABSENT=false
DAILY_SUMMARY_ENABLED=false
DAILY_SUMMARY_TIME=18:00

# ================================
# How to Enable Email Notifications:
# ================================
#
# 1. Set EMAIL_ENABLED=true
# 2. Configure SMTP settings above
# 3. For Gmail:
#    - Enable 2-Factor Authentication
#    - Generate App Password at: https://myaccount.google.com/apppasswords
#    - Use the App Password in SMTP_PASSWORD
# 4. Restart the backend server
# 5. Test with: POST /api/notifications/test?test_email=your@email.com
#
