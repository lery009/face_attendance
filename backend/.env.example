# Face Recognition Backend Configuration
# Copy this file to .env and update with your settings

# API Settings
API_HOST=0.0.0.0
API_PORT=3000

# Database Settings (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/face_recognition_db

# For MySQL, use:
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/face_recognition_db

# Face Recognition Settings
FACE_TOLERANCE=0.6
FACE_MATCH_THRESHOLD=0.6
FACE_DETECTION_MODEL=hog  # "hog" (faster) or "cnn" (more accurate, requires GPU)
MAX_FACES_PER_IMAGE=10

# Liveness Detection
ENABLE_LIVENESS=true
LIVENESS_THRESHOLD=0.7

# Security
MAX_IMAGE_SIZE_MB=10
RATE_LIMIT_PER_MINUTE=60

# Attendance Settings
ATTENDANCE_COOLDOWN_MINUTES=5
